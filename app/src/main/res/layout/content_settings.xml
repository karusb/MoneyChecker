<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.baz.moneychecker.Settings"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Total Amount:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/TotalAmountInput"
                android:layout_weight="1" />

            <TextView
                android:text="$"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CurrencyView2"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:text="Daily Limit:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DailyLimitText"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/DailyLimitInput"
                android:layout_weight="1" />

            <TextView
                android:text="$"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Currencyview1"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="Estimated Daily Limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/EstimatedDailyLimitText"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/EstimatedDailyLimit"
                android:layout_weight="1"
                android:text="0" />

            <TextView
                android:text="$"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CurrencyView6"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="6">

            <TextView
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:id="@+id/Save" />

            <EditText
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/Saving"
                android:layout_weight="1" />

            <TextView
                android:text="$"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CurrencyView7"
                android:layout_weight="1" />

            <TextView
                android:text="Until"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="1" />

            <EditText
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/ddtext"
                android:text="dd-mm-yyyy" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Days Until Payday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PaydayText"
                android:layout_weight="1" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TotalDays"
                android:gravity="center"
                android:layout_gravity="right|end" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Switch
                android:text="Monthly / Daily Limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="Currency:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="$"
                android:ems="10"
                android:id="@+id/CurrencySign"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="Reset Todays Daily Limit?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ResetDailyLimit"
                android:layout_weight="1" />

            <CheckBox
                android:text="Wipe Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/WIpeCheckBox" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Match Total"
                android:layout_width="wrap_content"
                android:id="@+id/MatchTotalBut"
                android:layout_weight="1.00"
                android:layout_height="63dp" />

            <Button
                android:text="Save"
                android:layout_width="127dp"
                android:layout_height="63dp"
                android:id="@+id/SaveBut"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
